{% extends "base.html.twig"%}
{% block title %}
    {{ parent()  }} - Sign up
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
{% endblock %}
{% block body %}
        <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                {{ form_start(form, {'attr': {'class': 'login100-form validate-form'}}) }}
					<span class="login100-form-title p-b-55">
						Register
					</span>
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger col-md-12" style="text-align: center">{{ message }}</div>
                {% endfor %}
                <div class="wrap-input100 validate-input m-b-16" data-validate = "Valid email is required: ex@abc.xyz">
                    {{ form_row(form.email, {'attr': {'class': 'input100','placeholder': 'Email'}}) }}
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
							<span class="lnr lnr-envelope"></span>
						</span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate = "Valid username is required">
                    {{ form_row(form.username, {'attr': {'class': 'input100','placeholder': 'Username'}}) }}
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
							<span class="lnr lnr-user"></span>
						</span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate = "Valid date is required and make sure you are older than 18">
                    {{ form_row(form.birth, {'attr': {'class': 'input100', 'id': 'datepicker','placeholder': '01/01/1980'}}) }}
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
							<span class="lnr lnr-calendar-full"></span>
						</span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate = "Password must contain at least 8 characters, one upper case and one special character">
                    {{ form_row(form.plainPassword.first,{'attr': {'class': 'input100','placeholder': 'Password'}} ) }}
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
							<span class="lnr lnr-lock"></span>
						</span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate = "Passwords doesnt seems the same">
                    {{ form_row(form.plainPassword.second,{'attr': {'class': 'input100','placeholder': 'Repeat Password'}} ) }}
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
							<span class="lnr lnr-lock"></span>
						</span>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="container-login100-form-btn p-t-25">
                    <button class="login100-form-btn" type="submit">
                        Register
                    </button>
                </div>

                <div class="text-center w-full p-t-42 p-b-22">
						<span class="txt1">
							Or subscribre with
						</span>
                </div>

                <a href="/connect/facebook" class="btn-face m-b-20" style="width: 100%">
                    <i class="fa fa-facebook-official"></i>
                    Facebook
                </a>

                <div class="text-center w-full p-t-115">
						<span class="txt1">
							Powered By
						</span>

                    <a class="txt1 bo1 hov1" href="#">
                        YassineZak
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
{% endblock %}
{% block javascripts %}
    {{ parent()  }}
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $( function() {
            $( "#form_birth" ).datepicker();
        });
    </script>
{% endblock %}